---
import { GetStaticPaths } from 'astro';
import { AstroComponentFactory } from 'astro/dist/runtime/server';
import SiteMeta from '../../components/SiteMeta.astro';

export const getStaticPaths: GetStaticPaths = async () => {
  const posts = await Astro.glob('../../content/blog/*.mdx');
  const allPosts = [] as {
    title: string;
    slug: string;
    description: string;
    Content: AstroComponentFactory;
  }[];
  posts.forEach(({ getHeadings, Content, frontmatter }) => {
    const { slug } = getHeadings()[0];
    allPosts.push({
      slug,
      Content,
      title: frontmatter.title,
      description: frontmatter.description,
    });
  });
  return allPosts.map((post) => {
    return {
      params: { post: post.slug },
      props: post,
    };
  });
};

interface Props {
  Content: AstroComponentFactory;
  title: string;
  slug: string;
  description: string;
}
const { Content, title, slug, description } = Astro.props;
---

<SiteMeta
  title={title}
  description={description}
  url={Astro.site
    ? `${Astro.site}/blog/${slug}`
    : `https://blog.gehrig.dev/blog/${slug}`}
/>
<Content />

<style lang='scss'>
  ul {
    display: grid;
    grid-template-columns: 1fr;
    grid-gap: 4rem;

    @media (min-width: 550px) {
      grid-template-columns: repeat(2, 1fr);
      grid-gap: 2rem;
    }

    @media (min-width: 950px) {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>
